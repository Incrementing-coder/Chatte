<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a1405003.chatte">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/grievance_ic"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name="com.example.a1405003.chatte.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.a1405003.chatte.login.LogInActivity"
            android:label="@string/title_activity_log_in"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.example.a1405003.chatte.register.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.example.a1405003.chatte.ui.ChatActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName="com.example.a1405003.chatte.ui.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.a1405003.chatte.ui.MainActivity" />
        </activity>
        <activity
            android:name="com.example.a1405003.chatte.ui.Main2Activity"
            android:label="@string/title_activity_main2"></activity>
    </application>

</manifest>